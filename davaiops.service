[Unit]
Description=Gunicorn instance to serve davaiops.com
After=network.target

[Service]
User=bobrock
Group=bobrock
Type=idle
WorkingDirectory=/home/bobrock/extras/davaiops
Environment="PATH=/home/bobrock/venvs/davaiops/bin"
ExecStart=/home/bobrock/venvs/davaiops/bin/gunicorn --workers 3 --bind 127.0.0.1:5000 -m 007 wsgi:app
Restart=on-failure

[Install]
WantedBy=multi-user.target